# Dockerfile de desenvolvimento para o backend Laravel
FROM php:8.2-fpm

# Instalar dependências do sistema
RUN apt-get update && apt-get install -y \
    git \
    curl \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    libzip-dev \
    libpq-dev \
    zip \
    unzip \
    && docker-php-ext-install pdo_mysql pdo_pgsql mbstring exif pcntl bcmath gd zip

# Instalar Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Definir diretório de trabalho
WORKDIR /var/www/html

# Copiar código da aplicação
COPY . .

# Configurar Composer com timeout maior e tentar instalar dependências
RUN composer config --global process-timeout 2000 && \
    composer install --optimize-autoloader --no-interaction --prefer-dist || \
    (sleep 10 && composer install --optimize-autoloader --no-interaction --prefer-dist)

# Definir permissões
RUN chown -R www-data:www-data /var/www/html \
    && chmod -R 755 /var/www/html/storage \
    && chmod -R 755 /var/www/html/bootstrap/cache

# Expor porta 8000 para o servidor HTTP do Laravel
EXPOSE 8000

# Comando para iniciar o servidor HTTP do Laravel
CMD ["php", "artisan", "serve", "--host=0.0.0.0", "--port=8000"] 